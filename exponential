#include <stdio.h>
#include <math.h>
double exponential(double x, int n) 
{
    double sum = 1;
    double term = 1;
    int i;
    for (i = 1; i <= n; i++)
	 {
        term *= x / i;
        sum += term;
    }

    return sum;
}
int main()
 {
    double x, e;
    int n;
    printf("Enter the value of x: ");
    scanf("%lf", &x);
    printf("Enter the number of terms to use: ");
    scanf("%d", &n);
    e = exponential(x, n);
    printf("e^(%.2lf) = %.6lf\n", x, e);
    return 0;
}
