#include <stdio.h>
int main()
 {
   int n, i;
   float sum = 0.0, number, average;
   printf("enter the number of elements");
   scanf("%d", &n);
   for (i = 1; i <= n; i++)
    {
      printf("enter number %d:\n", i);
      scanf("%f", &number);
      sum += number;
   }
    average = sum / n;
   printf("The sum of %d numbers is %.2f\n", n, sum);
   printf("The average of %d numbers is %.2f\n", n, average);
    return 0;
}
